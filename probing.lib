#!/bin/bash

probing_Domains()
{
printf "Running httpx on $DOMAIN" | notify --silent

cd ${RUNNING_PATH} && mkdir httpx && cd httpx

cat ${RUNNING_PATH}/subdomains/actual_Subdomains.txt ${RUNNING_PATH}/subdomains/probed_common_ports.txt | httpx -status-code -title -content-length -follow-redirects | tee httpx.txt

cat httpx.txt | awk '{print $1}' | tee probed.txt

printf "Probing work is completed" | notify --silent
}
